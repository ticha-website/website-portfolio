{% include 'components/header-base.njk' %}

<header class="header header--fixed">
    <div class="container">
        <div class="row justify-content-md-between">
            <div class="col-12 col-md-3">
                <a class="header__logo" href="/#">
                    <img src="/images/logo.svg?v<%= version %>" alt="{{ t('logo.alt') }}" height="50">
                </a>
                <a class="menu__toggler menu__toggler--sticked d-md-none" id="main-menu-toggler" href="#"
                data-target="#main-menu" aria-controls="main-menu" aria-expanded="false"
                aria-label="Toggle navigation">
                    <span class="toggler__icon"></span>
                </a>
            </div>
            <div class="col-12 col-md-auto">
                <div class="menu__collapse" id="main-menu">
                    <ul class="menu menu--horizontal">
                        <li class="menu__item"><a href="#about-me">{{ t('about.me') }}</a></li>
                        <li class="menu__item"><a href="#portfolio">{{ t('portfolio') }}</a></li>
						<li class="menu__item"><a href="#testimonial">{{ t('testimonial') }}</a></li>
						<li class="menu__item"><a href="#contact-me">{{ t('menu.contact') }}</a></li>
						<li class="menu__item menu__item--flag">
						{% for language, url in languages %}
								<a href="{{ url }}" class="menu__link{% if language == locale %} menu__link--active{% endif %}"><img src="/images/flag-{{ language }}.jpg?v<%= version %>" alt="{{ language }}"></a>
						{% endfor %}
						</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>
