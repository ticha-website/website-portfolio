{% set pageDate = '20. 4. 2025' %}
{% set client = clients[pageDate] %}
{% set pageTitle = client.name %}
{% set pageDescription = t('brainmarket.page.description') %}
{% set pageImage = client.image + '-md.jpg' %}

{% include 'components/header-base.njk' %}

<header class="header header--fixed">
	<div class="container">
		<div class="row justify-content-md-between">
			<div class="col-12 col-md-3">
				<a class="header__logo header__logo--clients" href="/#">
					<img src="/images/logo.svg?v<%= version %>" alt="{{ t('logo.alt') }}" height="50">
				</a>
			</div>
		</div>
	</div>
</header>

<div class="content" id="about-me">
	<div class="content__inner">
		<h4 class="client-title" id="page-title">{{ t('brainmarket.page.title') }}</h4>
		<div class="client-body" id="page-body">
			<h3>{{ t('brainmarket.page.name') }}</h3>
			<p>{{ t('brainmarket.job.description') }}</p>
			<p>{{ t('brainmarket.job.cooperation') }}</p>
			<p><a href="https://{{ t('brainmarket.website') }}/" target="_blank"> {{ t('brainmarket.website') }}</a></p>
			<p class="text-center">
				<img class="img-fluid d-inline-block d-sm-inline-block d-md-none" src="/images/clients/brainmarket-name-tag-500x333.jpg?v<%= version %>" alt="{{ t('brainmarket.alt.nametag') }}">
				<img class="img-fluid d-none d-md-inline-block d-xl-none" src="/images/clients/brainmarket-name-tag-750x500.jpg?v<%= version %>" alt="{{ t('brainmarket.alt.nametag') }}">
				<img class="img-fluid d-none d-xl-inline-block" src="/images/clients/brainmarket-name-tag-1200x800.jpg?v<%= version %>" alt="{{ t('brainmarket.alt.nametag') }}">
			</p>
			<p class="text-center">
				<img class="img-fluid d-inline-block d-sm-inline-block d-md-none" src="/images/clients/brainmarket-label-500x333.jpg?v<%= version %>" alt="{{ t('brainmarket.alt.label') }}">
				<img class="img-fluid d-none d-md-inline-block d-xl-none" src="/images/clients/brainmarket-label-750x500.jpg?v<%= version %>" alt="{{ t('brainmarket.alt.label') }}">
				<img class="img-fluid d-none d-xl-inline-block" src="/images/clients/brainmarket-label-1200x800.jpg?v<%= version %>" alt="{{ t('brainmarket.alt.label') }}">
			</p>
			<p class="text-center">
				<img class="img-fluid d-inline-block d-sm-inline-block d-md-none" src="/images/clients/brainmarket-price-tag-500x333.jpg?v<%= version %>" alt="{{ t('brainmarket.alt.pricetag') }}">
				<img class="img-fluid d-none d-md-inline-block d-xl-none" src="/images/clients/brainmarket-price-tag-750x500.jpg?v<%= version %>" alt="{{ t('brainmarket.alt.pricetag') }}">
				<img class="img-fluid d-none d-xl-inline-block" src="/images/clients/brainmarket-price-tag-1200x800.jpg?v<%= version %>" alt="{{ t('brainmarket.alt.pricetag') }}">
			</p>
		</div>
	</div>
</div>

{% include 'components/footer.njk' %}
