{% set pageDate = '20. 4. 2021' %}
{% set client = clients[pageDate] %}
{% set pageTitle = client.name %}
{% set pageDescription = t('escootie.page.description') %}
{% set pageImage = client.image + '-md.jpg' %}

{% include 'components/header.njk' %}

<div class="content" id="about-me">
    <div class="content__inner">
        <h4 class="client-title" id="page-title">{{ t('escootie.page.title') }}</h4>
        <div class="client-body" id="page-body">
            <h3>{{ t('escootie.page.name') }}</h3>
            <p>{{ t('escootie.intro') }}</p>
            <p>{{ t('escootie.job.description') }}</p>
            <p><a href="https://{{ t('escootie.website') }}/"> {{ t('escootie.website') }}</a></p>
            <img class="img-fluid m-5" src="/images/clients/eScootie-logo.svg?v<%= version %>" alt="eScootie Logo">
			<p class="text-center">
				<img class="img-fluid d-inline-block d-sm-inline-block d-md-none" src="/images/clients/eScootie-sticker-500x387.jpg?v<%= version %>" alt="{{ t('escootie.alt.sticker') }}">
				<img class="img-fluid d-none d-md-inline-block d-xl-none" src="/images/clients/eScootie-sticker-750x596.jpg?v<%= version %>" alt="{{ t('escootie.alt.sticker') }}">
				<img class="img-fluid d-none d-xl-inline-block" src="/images/clients/eScootie-sticker-1200x953.jpg?v<%= version %>" alt="{{ t('escootie.alt.sticker') }}">
			</p>
			<p class="text-center">
                <img class="img-fluid d-inline-block d-sm-inline-block d-md-none" src="/images/clients/eScootie-mobile-265x540.png?v<%= version %>" alt="{{ t('escootie.alt.picture.web') }}">
                <img class="img-fluid d-none d-md-inline-block d-xl-none" src="/images/clients/eScootie-mobile-344x700.png?v<%= version %>" alt="{{ t('escootie.alt.picture.web') }}">
                <img class="img-fluid d-none d-xl-inline-block" src="/images/clients/eScootie-mobile-530x1080.png?v<%= version %>" alt="{{ t('escootie.alt.picture.web') }}">
            </p>
        </div>
    </div>
</div>

{% include 'components/footer.njk' %}
